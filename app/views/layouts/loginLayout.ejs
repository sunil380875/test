                                                <label class="form-check-label" for="register-privacy-policy">
                                                    I agree to <a href="#">privacy policy & terms</a>
                                                </label>
                                            </div>
                                        </div>
                                        <button class="btn btn-primary w-100" tabindex="5">Sign up</button>
                                    </form>

