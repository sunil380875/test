        let isRtl = $('html').attr('data-textdirection') === 'rtl';
        toastr['success'](
        '<%=messages.success[0] %>',
        'Success!',
        {
            closeButton: true,
            tapToDismiss: false,
            rtl: isRtl
        }
        );
    </script>
    <% 
        }
    } 
