                <div class="auth-wrapper auth-basic px-2">
                    <div class="auth-inner my-2">
                        <!-- Login basic -->
                        <div class="card mb-0">
                            <div class="card-body">
                                <a href="<%= generateUrl('user.login')%>" class="brand-logo">
                                    <img src="/images/logo-new-wts.png" style="max-height: 70px;" alt="logo">
                                </a>

                                <section id="signin-section">
                                    <h4 style="text-align: center;" class="card-title mb-1">Welcome to <%= project_name %>! ðŸ‘‹</h4>
                                    
                                    <p class="card-text mb-2">Please sign-in to your account and start the adventure</p>
    
                                    <form class="auth-login-form mt-2"  id="admin_login_form" method="POST">
                                        <div class="mb-1">
                                            <label for="login-email" class="form-label">Email</label>
                                            <input type="text" class="form-control" id="login-email" name="email" placeholder="john@example.com" aria-describedby="login-email" tabindex="1" autofocus />
                                        </div>
    
                                        <div class="mb-1">
